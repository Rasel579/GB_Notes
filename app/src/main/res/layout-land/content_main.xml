<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/toDoListFragmentLand"
        android:name="com.example.gb_notes.InputToDoListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/marginTopToDoListHor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        tools:layout="@layout/fragment_to_do_list" />

    <fragment
        android:id="@+id/contentListFragmentLand"
        android:name="com.example.gb_notes.ContentNotesFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/toDoListFragmentLand"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/descriptionNoteFrgLand"
        app:layout_constraintTop_toTopOf="parent"
         />
    <fragment
        android:id="@+id/descriptionNoteFrgLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.gb_notes.DescriptionNoteFragment"
        app:layout_constraintBottom_toTopOf="@+id/toDoListFragmentLand"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/contentListFragmentLand"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>